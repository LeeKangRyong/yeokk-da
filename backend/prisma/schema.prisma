// Prisma schema for Yeokk-da project

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  googleId    String?   @unique
  name        String?
  avatar      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  memories    Memory[]
  integrations Integration[]

  @@index([email])
}

model Memory {
  id              String   @id @default(cuid())
  userId          String
  title           String
  content         String?
  memoryDate      DateTime
  location        String?

  // AI Analysis Results
  moodTag         String
  intensity       Int
  themeTag        String
  storyLine       String   @db.Text
  animationTheme  String   // 'happy' | 'nostalgic' | 'exciting' | 'peaceful' | 'melancholy'

  videoUrl        String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  images          MemoryImage[]
  sources         MemorySource[]

  @@index([userId, memoryDate])
  @@index([userId, createdAt])
  @@index([moodTag])
  @@index([themeTag])
}

model MemoryImage {
  id          String   @id @default(cuid())
  memoryId    String
  url         String
  thumbnail   String
  width       Int
  height      Int
  order       Int      @default(0)
  createdAt   DateTime @default(now())

  memory      Memory   @relation(fields: [memoryId], references: [id], onDelete: Cascade)

  @@index([memoryId, order])
}

model MemorySource {
  id          String   @id @default(cuid())
  memoryId    String
  platform    String   // 'manual' | 'instagram' | 'spotify' | 'notion'
  externalId  String?
  rawData     Json     @default("{}")
  createdAt   DateTime @default(now())

  memory      Memory   @relation(fields: [memoryId], references: [id], onDelete: Cascade)

  @@index([memoryId])
}

model Integration {
  id            String   @id @default(cuid())
  userId        String
  platform      String   // 'instagram' | 'spotify' | 'notion'
  accessToken   String   @db.Text
  refreshToken  String?  @db.Text
  expiresAt     DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, platform])
  @@index([userId])
}
